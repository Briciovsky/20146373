
<div class="card" style="width: 18rem;">
    <img src="https://pbs.twimg.com/media/EjU2ZAXWoAI9UeT.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title"> Name:@NameParameter</h5>
        <p class="card-text">Birthday: @BirthdayParameter</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Nickname: @NicknameParameter</li>
        <li class="list-group-item">Actor @ActorParameter</li>
        <li class="list-group-item">Status: @StatusParameter</li>
    </ul>
    <div class="card-body">
       
    </div>
</div>
@code{
    
    [Parameter] public string NameParameter {get; set;}
    [Parameter] public string BirthdayParameter {get; set;}
    [Parameter] public string NicknameParameter {get; set;}
    [Parameter] public string ActorParameter {get; set;}
    [Parameter] public string StatusParameter {get; set;}
    
}